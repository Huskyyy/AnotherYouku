<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_ad_pause_background_color_tudou">

    <RelativeLayout
        android:layout_width="@dimen/fullscreen_youku_pause_ad_width"
        android:layout_height="@dimen/fullscreen_youku_pause_ad_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/plugin_pause_ad_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/btn_close_pausead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/plugin_pause_ad_close_tudou" />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/player_ad_tip_width_tudou"
            android:layout_height="@dimen/player_ad_tip_height_tudou"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/player_ad_tip_text_size_tudou"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/yp_ad_pause_tip_background_color_tudou"
            android:text="广告"/>
    </RelativeLayout>
</RelativeLayout>


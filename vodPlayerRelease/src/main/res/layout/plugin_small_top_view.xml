<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plugin_small_top_view_height"
    android:background="@drawable/plugin_small_top_view_bg"
    android:gravity="left|center_vertical" >

    <LinearLayout
        android:id="@+id/player_back_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/player_back_btn_left"
            android:layout_width="@dimen/player_back_btn_left_width"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:src="@drawable/player_back_btn_left" />

        <ImageView
            android:id="@+id/player_back_btn_logo"
            android:layout_width="@dimen/player_back_btn_logo_width"
            android:layout_height="match_parent"
            android:src="@drawable/player_back_btn_logo" />

        <View
            android:id="@+id/player_back_btn_line"
            android:layout_width="1px"
            android:layout_height="@dimen/player_back_btn_line_height"
            android:background="#33ffffff" />
    </LinearLayout>

    <TextView
        android:id="@+id/plugin_small_top_view_title"
        style="@style/plugin_small_top_view_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/plugin_small_top_view_title_paddingleft"
        android:paddingRight="@dimen/plugin_small_top_view_title_paddingright" />

</LinearLayout>